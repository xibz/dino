#include <SFML/Graphics.hpp>
#include <stdio.h>
#include <pthread.h>

int main(int argc, char *argv[])
{
  if(argc < 2)
  {
    printf("Error: usage ./dino <rom name>\n");
    return 0;
  }
  sf::RenderWindow window(sf::VideoMode(800,600), argv[1]);
  while(window.isOpen())
  {
    sf::Event event;
    while(window.pollEvent(event))
    {
      if(event.type == sf::Event::Closed)
        window.close();
    }
    window.clear();
    window.display();
  }
  return 0;
}
